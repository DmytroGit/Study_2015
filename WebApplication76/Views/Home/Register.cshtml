
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация</h2>
@using (Html.BeginForm("Register", "Home"))
{
    @Html.Label("Логин")
    <br />
    @Html.TextBox("login")
    <br />
    @Html.Label("Пароль")
    <br />
    @Html.TextBox("password")
    <br />
    @Html.Label("Подтверждение пароля")
    <br />
    @Html.TextBox("passwordTwo")
    <br />
    @Html.Label("Email")
    <br />
    @Html.TextBox("email")
    <br />
    <br />
    <input class="btn btn-info" type="submit" name="submit" value="Регистрация" />
}
